@using MvcWebApp.Models
@{
    ViewData["Title"] = "Index";
}

<h2>Save Picture</h2>
<form asp-action="Upload" method="post" enctype="multipart/form-data">
    <input type="file" name="picture" />
    <button class="btn btn-primary" type="submit">Save</button>
</form>
@if (ViewBag.logs != null)
{
    <h2>Logs</h2>
    @foreach (var item in ViewBag.logs as List<string>)
    {
        <strong>@item</strong>
        <br />
    }
}
<h2>Blobs</h2>
<table class="table table-border">
    <tr>
        <th>Picture</th>
        <th>Name</th>
        <th>Action</th>

    </tr>

    @foreach (var item in ViewBag.Blobs as List<FileBlob>)
    {
        <tr>
            <td>
                <img src="@item.Url" class="img-thumbnail" style="width:50px;">
            </td>
            <td>
                @item.Name
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Download" asp-route-fileName="@item.Name">Download</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-fileName="@item.Name">Delete</a>
            </td>
        </tr>
    }
</table>